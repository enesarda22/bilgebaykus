      <%=instructor.name%>
    </a></td>
    </tr>



<%count++;%>
<%});%>

<%if(items[1]!=null) {%>
  <%items[1].forEach(function(course) {%>


      <tr>
      <th scope="row" class="text-center"><%=count%></th>
      <td><a href="/courses/<%=course.fullName%>">
