<section id="rate-section" class="container-fluid p-3">
  <div class="container-fluid bg-light p-3">
    <h1><%=instructor.name%></h1>
    <hr>
    <form action="/rate" method="post">

      <div class="row">
        <div class="col-lg-3 col-md-12">
          <div class="form-group">
            <label for="formControlRange">ders anlatımı: </label>
            <output id="amount0" name="amount0" for="lecturingValue" class="range-value">5</output>
            <input type="range" name="lecturingValue" min="0" max="10" class="form-control-range" id="lecturingValue" oninput="amount0.value=lecturingValue.value">
          </div>
        </div>
        <div class="col-lg-3 col-md-12">
          <div class="form-group">
            <label for="formControlRange">öğrenciyle iletişim: </label>
            <output id="amount1" name="amount1" for="studentRelValue" class="range-value">5</output>
            <input type="range" name="studentRelValue" min="0" max="10" class="form-control-range" id="studentRelValue" oninput="amount1.value=studentRelValue.value">
          </div>
        </div>
        <div class="col-lg-3 col-md-12">
          <div class="form-group">
            <label for="formControlRange">notlandırma: </label>
            <output id="amount2" name="amount2" for="gradingValue" class="range-value">5</output>
            <input type="range" name="gradingValue" min="0" max="10" class="form-control-range" id="gradingValue" oninput="amount2.value=gradingValue.value">
          </div>
        </div>
        <div class="col-lg-3 col-md-12">
          <div class="form-group">
            <label for="formControlRange">sınav zorluğu (fazlaysa zor): </label>
            <output id="amount3" name="amount3" for="difficultyValue" class="range-value">5</output>
            <input type="range" name="difficultyValue" min="0" max="10" class="form-control-range" id="difficultyValue" oninput="amount3.value=difficultyValue.value">
          </div>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-12">
          <div class="form-group">
            <label for="formGroupExampleInput">kısa bir değerlendirme:</label>
            <textarea maxlength="1000" name="reviewText" class="form-control mt-1" id="rating-textarea" rows="3" placeholder="değerlendirme" autocomplete="off" required></textarea>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <div class="form-group">
            <label for="courseSelect">aldığınız dersi seçin:</label>
            <select name="course" class="custom-select form-control" id="courseSelect">

              <optgroup>
                <%instructor.courses.forEach(function(course){%>
                <option value="<%=course.title+course.code%>"><%=course.title+course.code%></option>
                <%});%>
                <option value="diğer">diğer</option>
              </optgroup>

            </select>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <div class="form-group">
            <label for="authorSelect">yazar:</label>
            <select name="author" class="custom-select form-control" id="authorSelect">
              <option selected value="1">anonim</option>
              <option value="2">ismim gözüksün</option>
            </select>
          </div>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-12">
          <div class="form-check">
            <input class="form-check-input" type="radio" name="attendance" id="attendanceRadio1" value=1 checked>
            <label class="form-check-label" for="attendanceRadio1">
              yoklama alıyor
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="attendance" id="attendanceRadio2" value=0>
            <label class="form-check-label" for="attendanceRadio2">
              yoklama almıyor
            </label>
          </div>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-12">
          <div class="form-group form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1" required>
            <label class="form-check-label" for="exampleCheck1">yazdığım değerlendirme hakaret içermemektedir.</label>
          </div>
        </div>
      </div>

      <button type="submit" name="instructor" value="<%=instructor.name%>" class="btn btn-success btn-rate">gönder</button>
      <a href="/instructors/<%=instructor.name%>" class="btn btn-danger btn-rate">iptal</a>
    </form>
  </div>
</section>





<%- include('partials/footer') %>
