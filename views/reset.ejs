<%- include('partials/header') %>
<%- include('partials/alerts') %>

<div class="container-fluid bg-light py-5 text-center">
  <h1>şifre yenileme</h1>

  <div class="row">
    <div class="col-sm-12">
      <div class="card col-11 col-lg-3 login-card mx-auto px-0">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/reset/<%=token%>" method="POST">
            <div class="form-group">
              <label for="email">e-mail</label>
              <div class="row">
                <div class="col-12">
                  <input type="text" readonly class="form-control-plaintext" id="staticDomain" value="<%=user.username%>@boun.edu.tr">
                </div>
              </div>
            </div>
            <div class="form-group">
              <label for="password">şifre</label>
              <input type="password" class="form-control" name="password">
            </div>
            <div class="form-group">
              <label for="second-password">şifreyi yeniden girin</label>
              <input type="password" class="form-control" name="secondPassword" required>
            </div>
            <button type="submit" class="btn btn-success login-button">yenile</button>
          </form>


        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
