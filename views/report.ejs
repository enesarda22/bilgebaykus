<div class="container-fluid p-3">
  <div class="container-fluid bg-light p-3">
    <h1>raporlama</h1>
    <form class="" action="/report" method="post">
    <div class="row">
      <div class="col-12">
        <div style="width: 100%;" class="card">
          <div class="card-body review-card">

            <p class="date"><%=review.date%></p>
            <%=review.text%>
            <br>
            <span class="review-author"><strong>ders: </strong><%=review.course%> <span class="ml-2"><strong>yazar: </strong></span><%=review.author%></span>

          </div>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-12">
        <div class="form-group">
          <label for="formGroupExampleInput">raporlama nedeniniz:</label>
          <textarea name="reportText" class="form-control mt-1" id="rating-textarea" rows="3" autocomplete="off" required></textarea>
        </div>
        <input type="hidden" name="reportedUser" value=<%=review.userID%> />
        <button type="submit" name="instructor" value="<%=instructor.name%>" class="btn btn-success btn-rate">gönder</button>
        <a href="/instructors/<%=instructor.name%>" class="btn btn-danger btn-rate">iptal</a>
      </div>
    </div>
    </form>
  </div>
</div>



